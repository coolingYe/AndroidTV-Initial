<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="146dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zeewain.base.widgets.ScaleConstraintLayout
        android:id="@+id/cl_type_footer_back"
        android:layout_width="169dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_corner42_frame_white_ff969696"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cl_type_footer_search"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/selector_footer_back_to_top"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="回到顶部"
                android:textColor="@color/color_selector_2a2c41_ffffff"
                android:textSize="20sp"/>
        </LinearLayout>

    </com.zeewain.base.widgets.ScaleConstraintLayout>


    <com.zeewain.base.widgets.ScaleConstraintLayout
        android:id="@+id/cl_type_footer_search"
        android:layout_width="169dp"
        android:layout_height="43dp"
        android:layout_marginStart="54dp"
        android:background="@drawable/selector_corner42_frame_white_ff969696"
        app:layout_constraintLeft_toRightOf="@+id/cl_type_footer_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cl_type_footer_back">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/selector_footer_search"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="搜索"
                android:textColor="@color/color_selector_2a2c41_ffffff"
                android:textSize="20sp"/>
        </LinearLayout>



    </com.zeewain.base.widgets.ScaleConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>