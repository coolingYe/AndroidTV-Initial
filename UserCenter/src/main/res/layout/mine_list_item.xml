<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_mine_list_item"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:background="@drawable/selector_border_2_space_3_1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants">

    <ImageView
        android:id="@+id/iv_mine_list_item"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:duplicateParentState="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mine_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:duplicateParentState="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="课件名称"
        android:textColor="@color/item_user_collect_text_color"
        android:textSize="21sp"
        app:layout_constraintStart_toEndOf="@+id/iv_mine_list_item"
        app:layout_constraintTop_toTopOf="@+id/iv_mine_list_item" />

    <TextView
        android:id="@+id/tv_mine_list_item_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="22dp"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="2"
        android:textColor="@color/item_user_collect_text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_mine_list_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_mine_list_item_title" />

    <TextView
        android:id="@+id/tv_mine_list_item_del"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_del_shadow"
        android:duplicateParentState="true"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/text_del"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_mine_list_item"
        app:layout_constraintEnd_toEndOf="@+id/iv_mine_list_item"
        app:layout_constraintStart_toStartOf="@+id/iv_mine_list_item"
        app:layout_constraintTop_toTopOf="@+id/iv_mine_list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>